<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="note"
            type="ru.gmasalskikh.noteskeeper.data.entity.Note" />

        <variable
            name="clickListener"
            type="ru.gmasalskikh.noteskeeper.ui.list_notes.NotesListAdapter.NoteClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->clickListener.onClick(note)}"
        app:noteBackgroundColor="@{note}"
        android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:noteTitle="@{note}"
            tools:text="Very important note"/>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:noteText="@{note}"
            tools:text="My very important note text with very important information"/>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>